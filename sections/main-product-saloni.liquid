{% comment %}
  Custom Product Section — Saloni Style Layout
  Author: Kadir x ChatGPT
{% endcomment %}

<section class="saloni-product container">
  <div class="saloni-grid">
    <!-- LEFT: Product Gallery -->
    <div class="saloni-gallery">
      <div class="main-image">
        {{ product.featured_image | image_url: width: 1200 | image_tag: alt: product.title }}
      </div>
      {% if product.images.size > 1 %}
        <div class="thumbnail-row">
          {% for image in product.images %}
            <div class="thumb">
              {{ image | image_url: width: 200 | image_tag: alt: image.alt }}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <!-- RIGHT: Product Info -->
    <div class="saloni-info">
      {% if product.compare_at_price > product.price %}
        <span class="saloni-sale-badge">SALE</span>
      {% endif %}
      <h1 class="saloni-title">{{ product.title }}</h1>

      <div class="saloni-price">
        {% if product.compare_at_price > product.price %}
          <span class="old-price">{{ product.compare_at_price | money }}</span>
        {% endif %}
        <span class="current-price">{{ product.price | money }}</span>
      </div>

      <p class="shipping-note">Shipping calculated at checkout.</p>

      {% if product.options.size > 0 %}
        <div class="saloni-option">
          <label for="ProductSelect">Options</label>
          <select id="ProductSelect" name="id">
            {% for variant in product.variants %}
              <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}selected{% endif %}>
                {{ variant.title }}
              </option>
            {% endfor %}
          </select>
        </div>
      {% endif %}

      <!-- Quantity Selector -->
      <div class="quantity-wrapper">
        <label for="Quantity">Quantity</label>
        <div class="quantity-controls">
          <button type="button" class="qty-btn minus">−</button>
          <input type="number" id="Quantity" name="quantity" value="1" min="1">
          <button type="button" class="qty-btn plus">+</button>
        </div>
      </div>

      <!-- Add to Cart Buttons -->
      <div class="saloni-buttons">
        <button type="submit" name="add" class="btn-add">Add to cart</button>
        <button type="button" class="btn-buy">Buy with Shop</button>
      </div>

      <!-- Product Description -->
      <div class="saloni-description">
        {{ product.description }}
      </div>
    </div>
  </div>
</section>

<style>
.saloni-product.container {
  max-width: 1400px;
  margin: 50px auto;
  padding: 0 30px;
}
.saloni-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: start;
}
.saloni-gallery .main-image img {
  width: 100%;
  border-radius: 10px;
}
.thumbnail-row {
  display: flex;
  gap: 10px;
  margin-top: 15px;
}
.thumb img {
  width: 80px;
  border-radius: 5px;
  cursor: pointer;
}
.saloni-sale-badge {
  display: inline-block;
  background: #c00;
  color: #fff;
  font-size: 13px;
  padding: 4px 10px;
  border-radius: 4px;
  letter-spacing: 0.5px;
  margin-bottom: 10px;
}
.saloni-title {
  font-size: 28px;
  margin: 10px 0;
  font-weight: 600;
  letter-spacing: 0.5px;
}
.saloni-price {
  font-size: 20px;
  margin-bottom: 10px;
}
.old-price {
  text-decoration: line-through;
  color: #999;
  margin-right: 10px;
}
.current-price {
  font-weight: 600;
}
.shipping-note {
  font-size: 13px;
  color: #777;
  margin-bottom: 20px;
}
.saloni-option select {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  margin-bottom: 20px;
}
.quantity-wrapper {
  margin-bottom: 20px;
}
.quantity-controls {
  display: flex;
  align-items: center;
  gap: 10px;
}
.qty-btn {
  border: 1px solid #ddd;
  background: #f8f8f8;
  width: 32px;
  height: 32px;
  font-size: 18px;
  cursor: pointer;
}
.saloni-buttons {
  display: flex;
  gap: 10px;
  margin-bottom: 25px;
}
.btn-add {
  flex: 1;
  background: #000;
  color: #fff;
  border: none;
  padding: 14px;
  cursor: pointer;
  font-weight: 500;
  border-radius: 5px;
}
.btn-buy {
  flex: 1;
  background: #5a31f4;
  color: #fff;
  border: none;
  padding: 14px;
  font-weight: 500;
  border-radius: 5px;
  cursor: pointer;
}
.saloni-description {
  font-size: 15px;
  line-height: 1.7;
  color: #444;
}
@media (max-width: 900px) {
  .saloni-grid {
    grid-template-columns: 1fr;
  }
}
</style>
